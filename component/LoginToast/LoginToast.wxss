.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
  background: rgba(0, 0, 0, 0.3);
}  
.toast_content {  
  width: 50%;  
  height: 100px;
  padding: 30rpx;  
  background: white;  
  border-radius: 20rpx;  
}  

.toast_content_text {  
  margin: 15px 0px;
  height: 60px;  
  width: 100%;  
  color: white;  
  font-size: 28rpx;  
  text-align: center;  
} 

.wxiconimg {
  height: 30px;  
  width: 30px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
}

.wxloginBtn {
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 4rpx; 
  width: 100%;
  height: 40px;
  line-height: 100rpx;
  background-color: #32CD32;
  color: white; 
}