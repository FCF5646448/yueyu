/* pages/searchList/searchList.wxss */

.searchView {
  height: 34px;
  width: 100%;
  background-color: white;
}

.searchInput {
  margin: 2px 20px; 
  background-color: #ECECEC; 
  font-size: .75rem;
  color: #828a92;
  height: 28px;
  border-radius: 14px;
  text-align: center;
}

.placeholdercenter{
  text-align: center;
}


.scroll-view-item {
  padding: 1rem 10px;
  display: flex;
  border-bottom: 1px solid #e6e8eb;
}
.item-img {
  height: 4rem;
  flex: 1;
  display: block;
}
.detail {
  height: 4rem;
  line-height: 1.25em;
  flex: 2;
  padding: 0 10px;
  position: relative;
}
.item-name {
  font-size: .75rem;
  overflow: hidden;
  height: 2.5rem;
  display: block;
}
.tips {
  font-size: .65rem;
  position: absolute;
  bottom: 0;
  color: #828a92;
  display: flex;
}
.item-info {
  word-break: break-all;
  float: left;
  flex: 3;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 1rem;
}