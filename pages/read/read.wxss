
.searchView {
  height: 34px;
  width: 100%;
  background-color: white;
}

.searchBtn {
  background-color: #ECECEC; 
  font-size: .75rem;
  color: #828a92;
  width: 90%;
  height: 28px;
  border-radius: 14px;
}

 .searchBtn::after { 
   border: none; 
} 



.swiper-tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ECECEC;
	text-align: center;
	line-height: 80rpx; 
}

.swiper-tab-list{  
  font-size: 30rpx;
  display: inline-block; 
	color: #777777;
}

.on{ 
  color: #da7c0c;
	border-bottom: 5rpx solid #da7c0c;
}

.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}

