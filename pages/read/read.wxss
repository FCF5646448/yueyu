.weui-grids { 
  position: relative;   
  overflow: hidden; 
  padding: 5px 5px; 
   /* background-color: #ECECEC;  */
  border-bottom: 2rpx solid #ECECEC;
}

.weui-grid {  
  position: relative;  
  float: left;  
  padding: 10px 5px;  
  width: 25%;  
  box-sizing: border-box; 
}

.weui-grid__icon {  
  padding: 0;
  height: 90px;
  margin: 0 auto;
}

 .weui-grid__icon image {  
  display: block;  
  width: 100%;  
  height: 100%;
} 

.weui-grid__label { 
  margin-top: 5px;
  display: block;  
  text-align: center;  
  font-weight: bold;  
  color: #828a92; 
  font-size: .65rem;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
  overflow: hidden;
}

.module {
  padding: 0 10px;
  font-size: .85rem;
  font-weight: bold;
}